<%- include('./header.ejs') %>
<head>
    <title><%=pokemonItem.name %></title>
</head>
<body>
    <style>
        body{
            background-color: #3c5aa6;
        }
        .card{
            margin-top: 100px;
            border: 10px solid #ffcb05;
            border-radius: 2em;
            background-color: white;
        }
    </style>
    
    <div class="container">
                <div class="card col-md-4" style="width: 30rem; align-items: center;">
                    <img src="<%=pokemonItem.img %>" class="card-img-top" >
                    <div class="card-body">
                      <h3 class="card-title"><%=pokemonItem.name %></h3>
                      <p class="card-text">ID: <%=pokemonItem.id %>
                        <br>Weight: <%=pokemonItem.misc.weight %>
                        <br>Height: <%=pokemonItem.misc.height %></p>
                    </div>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item">Type: <%=pokemonItem.type %></li>
                      <li class="list-group-item">Normal Ability: <%=pokemonItem.misc.abilities.normal %></li>
                      <li class="list-group-item">Hidden Ability: <%=pokemonItem.misc.abilities.hidden %></li>
                    </ul>
                    <div class="card-body">
                        <div class="button"><button type="submit" class="btn btn-outline-warning"><a href='/pokemon/<%=pokemonId%>/edit'>Edit</a></button>
                            <form action="/pokemon/<%=pokemonId %>?_method=DELETE" method="POST"> <button type="submit" value="DELETE" class="btn btn-outline-danger">DELETE</button></form>
                        </div>
                    </div>
    
    </div>  
    
</body>
</html>
