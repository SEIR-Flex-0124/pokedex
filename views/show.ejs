<%- include('./partials/header.ejs') %>
<h2><%= singlePoke.name %></h2>
<h5>TYPE:</h5>
    <ul>
        <% for(let i = 0; i < singlePoke.type.length; i++) { %>
            <li><%= singlePoke.type[i] %></li>
        <% } %>
    </ul>
<img src=<%= singlePoke.img %> alt="pic of Pokemon">
<h5>STATS:</h5>
<p>attack: <%= singlePoke.stats.attack %></p>
<p>defense: <%= singlePoke.stats.defense %></p>
<p>speed: <%= singlePoke.stats.speed %></p>
<br>
<a href="/pokemon/<%= idx %>/edit">Edit Pokemon</a>
<a href="/pokemon/<%= idx %>/delete">Delete Pokemon</a>
<a href="/pokemon">Back to full Pokedex</a> 
