
<%- include('./header.ejs') %>

    <h1>This is an index of my Pokemon</h1>
    <% for(let i = 0; i < pokemon.length; i++) { %>
        <a href="/pokemon/<%=i%>">
            <img src=<%= pokemon[i].img %> alt="Pokemon picture">
            <h3>Name: <%= pokemon[i].name %></h3>
        </a>
        <h3>Type: <%= pokemon[i].type%></h3>
        <form action="/pokemon/<%= i %>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE"/>
        </form>
        <a href="/pokemon/<%=i; %>/edit">Edit</a>
        <hr>
    <% } %>
</body>
</html>