<html>
    <head>
        <title>Pokedex</title>
    </head>
    <body>
        <h1>Pokedex</h1>
        <nav>
            <a href="/pokemon/new">Create a New Pokemon</a>
            
        </nav>
        <ul>
        <% for (var i = 0; i < pokemon.length; i++) { %>
            <li>
                <a href="/pokemon/<%= pokemon[i].id %>"><img src="<%= pokemon[i].img %>"
                    alt="<%= pokemon[i].name %>">
            </a>
            <form action="/pokemon/<%= i %>?_method=DELETE" method="POST">
                <input type = "submit" value = "DELETE"
           </form>
            </li>
        <% } %>
        </ul>
    </body>
</html>