<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokédex</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <script src="/js/script.js" defer></script>
</head>
<body>
    <header>
        <!--Pokédex Header-->
    </header>
    <main>
        <!--Pokédex-->
        <div class="pokedex">
            <div class="top">
                <div class="blue"></div>
                <div class="ryg">
                    <div class="red"></div>
                    <div class="yellow"></div>
                    <div class="green"></div>
                </div>
                <div class="topName">
                    <!--Top Name-->
                </div>
            </div>
            <div class="screenBorder">
                <div class="screen">
                    <div class="headerDiv">
                        <h3 class="title">Pokédex</h3>
                    </div>
                    <div class="newPokemon">
                        <!--New Pokémon Form-->
                        <form method="POST" action="/new">
                            <label for="name">Name:</label>
                            <input type="text" id="name" name="name"><br>
                            
                            <label for="img">Img Url:</label>
                            <input type="text" id="img" name="img"><br>
                            
                            <label for="type">Type:</label>
                            <input type="text" id="type" name="type"><br>
                            
                            <label for="hp">HP:</label>
                            <input type="number" id="hp" name="stats.hp"><br>

                            <label for="attack">Attack:</label>
                            <input type="number" id="attack" name="stats.attack"><br>

                            <label for="defense">Defense:</label>
                            <input type="number" id="defense" name="stats.defense"><br>

                            <label for="spattack">Special Attack:</label>
                            <input type="number" id="spattack" name="stats.spattack"><br>

                            <label for="spdefense">Special Defense:</label>
                            <input type="number" id="spdefense" name="stats.spdefense"><br>

                            <label for="speed">Speed:</label>
                            <input type="number" id="speed" name="stats.speed"><br>

                            <label for="classification">Classification:</label>
                            <input type="text" id="classification" name="misc.classification"><br>

                            <label for="height">Height:</label>
                            <input type="text" id="height" name="misc.height"><br>

                            <label for="weight">Weight:</label>
                            <input type="text" id="weight" name="misc.weight"><br>
                            
                            <button type="submit">Add Pokemon</button>
                        </form>
                    </div>
                    <div class="footerDiv">
                        
                    </div>
                </div>
            </div>
            <div class="buttons">
                <!--D-Pad & A/B Buttons-->
                <div class="dpad">
                    <div class="dpad-up"><button class="up"></button></div>
                    <div class="dpad-down"><button class="down"></button></div>
                    <div class="dpad-left"><button class="left"></button></div>
                    <div class="dpad-right"><button class="right"></button></div>
                    <div class="dpad-middle"></div>
                </div>
                <div class="ab">
                    <!--A & B Buttons-->
                    <div class="bButton">
                        <a href="/pokemon"><button class="buttonB">B</button></a>
                    </div>
                    <div class="aButton">
                        <button class="buttonA">A</button>
                    </div>
                </div>
            </div>
            <div class="buttons2">
                <!--Bottom Buttons-->
                <div class="selectDiv">
                    <a href="/pokemon"><button class="select">Pokemon</button></a>
                </div>
                <div class="startDiv">
                    <a href="/myteam"><button class="start">My Team</button></a>
                </div>
                <div class="addDiv">
                    <button class="add">New</button>
                </div>
                <div class="removeDiv">
                    <button class="remove">Edit</button>
                </div>
            </div>
            <div class="leftDiv">
                <div class="leftDivInside">
                    <div class="leftScreenBorder">
                        <div class="leftScreen">
                            <!--Pokemon Information Display-->
                        </div>
                    </div>
                </div>
            </div>
            <div class="rightDiv">
                <div class="rightDivInside">
                    <div class="rightScreenBorder">
                        <div class="rightScreen">
                            <!--Other Display-->
                        </div>
                    </div>
                </div>
            </div>
            <div class="bottomDiv">
                <!--Info Box-->
            </div>
        </div>
    </main>
</body>
</html>