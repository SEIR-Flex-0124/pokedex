<%-include('./header.ejs', {name: 'Add a Pokemon'})%>
    <div class="card-background">
    <title>Add Pokemon</title>
    
    <form method="POST" action="/pokedex" class="add-pokemon-form" style="font-family: 'Press Start 2P'; text-align: center;">
        <h1>Add a Pokemon:</h1>
        <label for="name">Name:</label>
        <input type="text" name="name" id="name">
        <br><br>
        <label for="type">Type:</label>
        <input type="text" name="type" id="type">
        <br><br>
        <label for="hp">HP:</label>
        <input type="text" name="hp" id="hp">
        <br><br>
        <label for="attack">Attack:</label>
        <input type="text" name="attack" id="attack">
        <br><br>
        <label for="defense">Defense:</label>
        <input type="text" name="defense" id="defense">
        <br><br>
        <label for="img-url">Image URL:</label>
        <input type="text" name="img" id="img">
        <br><br>
        <input type="submit" value="Submit" id="new-submit">
    </form>
</div>


    
</body>
</html>