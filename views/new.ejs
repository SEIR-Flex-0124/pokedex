<%- include('./header.ejs', {name: "New Pokemon"}) %>
    <h1>You Found a New Pokémon?</h1>
    <h2>You think we got our entries wrong? Submit your changes here:</h2>
    <form method="POST" action="/pokemon">
        <label for="name">Name</label>
        <input type="text" id="name" name="name"></input>
        <br>
        <label for="img">Image URL:</label>
        <input type="text" id="img" name="img"></input>
        <br>
        <label for="type">Type:</label>
        <input type="text" id="type" name="type"></input>
        <br>
        <label for="statList">Stats:</label>
        <ul id="statList" name="statList">
            <li>
            <label for="hp">HP</label>
            <input type="text" id="hp" name="hp"></input>
            </li>
            <li>
            <label for="atk">Attack:</label>
            <input type="text" id="atk" name="atk"></input>
            </li>
            <li>
            <label for="def">Defense:</label>
            <input type="text" id="def" name="def"></input>
            </li>
        </ul>
        <label for="submit">Ready?</label>
        <input type="submit" id="submit" name="submit" value="Pokéball, Go!">
    </form>
</body>
</html>