<%- include('header.ejs', {name: "Edit this Pokemon"})%>

<h1>Edit <%= pokemon.name %>!</h1>
<form method="POST" action="/pokemon/<%= idx %>?_method=PUT">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value='<%= pokemon.name %>'>
    <br>
    <label for="type">Type:</label>
    <input type="text" name="type" id="type"  value='<%= pokemon.type %>'>
    <br>
    <label for="img">Image URL: </label>
    <input type="text" name="img" id="image"  value='<%= pokemon.img %>'>
    <br>
    <input type="submit" value="Edit <%= pokemon.name %> ">
</form>
</body>
</html>