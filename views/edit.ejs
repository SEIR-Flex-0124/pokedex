<%- include('./partials/header.ejs') %>
<h1>Create a new Pokemon:</h1>
<form method="POST" action="/pokemon/<%= idx %>?_method=PUT">
    <label for="name">Name: </label>
    <input type="text" name="name" id="name" value=<%= pokemonToBeEdited.name %>>
    <br>
    <label for="type">Type: </label>
    <input type="text" name="type" id="type" value=<%= pokemonToBeEdited.type %>>
    <br>
    <label for="image">Image URL: </label>
    <input type="text" name="image" id="image" value=<%= pokemonToBeEdited.img %>>
    <br>
    <label for="stats">Stats: </label>
    <input type="text" name="stats" id="stats" value=<%= pokemonToBeEdited.stats %>>
    <br>
    <input type="submit" value="Add new Pokemon">
</form>





<%- include('./partials/footer.ejs') %>